@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    
}



<div class="container" style="text-align: center">
    <div style="margin-bottom: 2.5%; width:100%">
        <div class="col-md-12 text-center">
            <h1>MarketOn</h1>
        </div>
    </div>
    <div>
        <div class="text-center" style="width:100%">
            <div style="width:100%">
                <div class="text-center" style="width:100%">
                    <div class="form-group" >
                        <input type="text" class="form-control text-center" placeholder="Username o Email" id="username" style="display:initial">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control text-center" placeholder="Password" id="password" style="display: initial">
                    </div>
                </div>
                <div style="margin-top: 2.5%; style="width:100%"" class="row" >
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        @Html.ActionLink("Login", "Index", "Home", null, new { @class = "btn btn-danger  col-md-12" })
                        <p>Aun No Formas Parte? @*@Html.ActionLink("Unete!", "Registro", "Login", null, new { id = "registro" })*@ <a href="#" id="registro">Unete!</a></p>
                    </div>
                    <div class="col-md-5"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body" id="ContenedorModal" style="display:flex">
                </div>

                 @*Modal footer 
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>*@

            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#registro").click(function () {
                //var id = $(this).data("value");
                var ruta = "/Login/Registro";
                $("#ContenedorModal").load(ruta, function () {
                    $("#myModal").modal("show")
                });
            });
        });   
    </script>
}
