@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    
}
<div class="container">
    <div class="row" style="margin-bottom: 2.5%;">
        <div class="col-md-12 text-center">
            <h1>MarketOn</h1>
        </div>
    </div>
    <div class="row">
        <div class="text-center">
            <div class="row">
                <div class="text-center" >
                    <div class="form-group" >
                        <input type="text" class="form-control text-center" placeholder="Username o Email" id="username" style="display:initial">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control text-center" placeholder="Password" id="password" style="display: initial">
                    </div>
                </div>
                <div style="margin-top: 2.5%;" class="row" >
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        @Html.ActionLink("Login", "Index", "Home", null, new { @class = "btn btn-danger  col-md-12" })
                        <p>Aun No Formas Parte? @Html.ActionLink("Unete!", "Registro", "Login", null)</p>
                    </div>
                    <div class="col-md-5"></div>
                </div>
            </div>
        </div>
    </div>
</div>

