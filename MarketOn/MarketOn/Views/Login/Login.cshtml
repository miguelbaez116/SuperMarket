
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}
<div class="container" style="text-align: center">
    <div style="margin-bottom: 2.5%; width:100%">
        <div class="col-md-12 text-center">
            <h1>MarketOn</h1>
        </div>
    </div>
    <div>
        <div class="text-center" style="width:100%">
            <div style="width:100%">
                <div class="text-center" style="width:100%">
                    <div class="form-group">
                        <input type="text" class="form-control text-center" placeholder="Username o Email" id="username" style="display:initial" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control text-center" placeholder="Password" id="password" style="display: initial" required>
                    </div>
                </div>
                <div style="margin-top: 2.5%;" class="row">
                    <div class="col-md-5"></div>
                    <div class="col-md-2">
                        <a href="#" id="btnLogin" class="btn btn-danger col-md-12">Login</a>
                        <p>Aun No Formas Parte? <a href="#" id="btnRegistro">Unete!</a></p>
                    </div>
                    <div class="col-md-5"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Registro</h4>
                    <button type="button" style="position: absolute;top: 20px;left: 90%;" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" id="ContenedorModal" style="display:flex"></div>
            </div>
        </div>
    </div>

</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnLogin").click(function (event) {

                var username = $("#username").val();
                var password = $("#password").val();

                $.ajax({
                    url: "/Login/LoginValidator",
                    type: "POST",
                    data: JSON.stringify({ 'username': username, 'password': password }),
                    dataType: "json",
                    traditional: true,
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data == true) {
                            window.location.href = '/Home/Index';
                        } else {
                            alert("Favor Verificar Usuario y Contraseña");
                            return;
                        }
                    },
                    error: function () {
                        alert("Error en el BackEnd!!");
                    }
                });
            });
        });

        $(document).ready(function () {
            $("#btnRegistro").click(function () {
                var ruta = "/Login/Registro";

                $("#ContenedorModal").load(ruta, function () {
                    $("#myModal").modal("show")
                    Prueba();
                });
            });
        });
        function Prueba() {

            var userValidator = false;
            var passwordValidator = false;

            $(document).ready(function () {
                $("#confirmPassword").change(function () {
                    passwordValidator = true;
                    if (this.value != $("#passwordReg").val()) {
                        passwordValidator = false
                        alert("Favor Confirmar Contraseña");
                        return;
                    }
                });
            });

            $(document).ready(function () {
                $("#usernameReg").change(function () {

                    var usernameReg = this.value;
                    userValidator = true;
                    $.ajax({
                        url: "/Login/UserValidator",
                        type: "POST",
                        data: JSON.stringify({ 'username': usernameReg }),
                        dataType: "json",
                        traditional: true,
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data == false) {
                                userValidator = false
                                alert("Favor Verificar Usuario");
                                return;
                            }
                        },
                        error: function () {
                            alert("Error en el BackEnd!!");
                        }
                    });
                });
            });

            $(document).ready(function () {
                $("#Registro").click(function (event) {
                    if (userValidator == true && passwordValidator == true) {
                        $("form").submit();
                    } else {
                        alert("Favor Verificar Usuario o Contraseña");
                        return;
                    }
                });
            });
        }
    </script>
}
