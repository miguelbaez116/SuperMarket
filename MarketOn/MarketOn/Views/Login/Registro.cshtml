@model MarketOn.DataMarketOn.Usuario
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}
@using (Ajax.BeginForm("Registro", "Login",new AjaxOptions { UpdateTargetId = "Contenedor-Registro" }))
{
    <div class="Contenedor-Registro" style="display:inline-block" id="Contenedor-Registro">
        <div class="form-group text-center col-md-6">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control text-center", placeholder = "Nombres" })
        </div>
        <div class="form-group text-center col-md-6">
            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control text-center", placeholder = "Apellidos" })
        </div>
        <div class="form-group text-center col-md-6">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center", placeholder = "Correo Electronico", type = "email" })
        </div>
        <div class="form-group text-center col-md-6">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control text-center", placeholder = "Nombre Usuario" })
        </div>
        <div class="form-group text-center col-md-6">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control text-center", placeholder = "Contraseña", type = "password" })
        </div>
        <div class="form-group text-center col-md-6">
            <input type="password" class="form-control text-center" placeholder="Confirmar Contraseña" id="confirmPassword">
        </div>
        <div class="form-group text-center col-md-6">
            @Html.TextBoxFor(m => m.FechaNacimiento, new { @class = "form-control text-center", placeholder = "Fecha de Nacimiento", type = "Date" })
        </div>
        <div class="form-group text-center col-md-6">
            @Html.TextBoxFor(m => m.FamiliaCode, new { @class = "form-control text-center", placeholder = "Codigo Familiar" })
        </div>
        <div class="btn-group col-md-12">
            <input type="submit" name="Registro" value="Registrate" class="btn btn-danger" id="btnRegistro" style="display: initial; max-width: 1000px; width:100%" />
        </div>
    </div>
}