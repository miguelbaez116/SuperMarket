@model MarketOn.Models.MothesOfModels
@{
    ViewBag.Title = "ConsultarLista";
}
<style>
    .InputFull {
        /*display: initial;*/
        max-width: 1200px;
        width: 100%;
    }

   
    .panel.with-nav-tabs .panel-heading {
        padding: 5px 5px 0 5px;
    }

    .panel.with-nav-tabs .nav-tabs {
        border-bottom: none;
    }

    .panel.with-nav-tabs .nav-justified {
        margin-bottom: -1px;
    }
    /********************************************************************/
    /*** PANEL DANGER ***/
    .with-nav-tabs.panel-danger .nav-tabs > li > a,
    .with-nav-tabs.panel-danger .nav-tabs > li > a:hover,
    .with-nav-tabs.panel-danger .nav-tabs > li > a:focus {
        color: #a94442;
    }

        .with-nav-tabs.panel-danger .nav-tabs > .open > a,
        .with-nav-tabs.panel-danger .nav-tabs > .open > a:hover,
        .with-nav-tabs.panel-danger .nav-tabs > .open > a:focus,
        .with-nav-tabs.panel-danger .nav-tabs > li > a:hover,
        .with-nav-tabs.panel-danger .nav-tabs > li > a:focus {
            color: #a94442;
            background-color: #ebccd1;
            border-color: transparent;
        }

    .with-nav-tabs.panel-danger .nav-tabs > li.active > a,
    .with-nav-tabs.panel-danger .nav-tabs > li.active > a:hover,
    .with-nav-tabs.panel-danger .nav-tabs > li.active > a:focus {
        color: #a94442;
        background-color: #fff;
        border-color: #ebccd1;
        border-bottom-color: transparent;
    }

    .with-nav-tabs.panel-danger .nav-tabs > li.dropdown .dropdown-menu {
        background-color: #f2dede; /* bg color */
        border-color: #ebccd1; /* border color */
    }

        .with-nav-tabs.panel-danger .nav-tabs > li.dropdown .dropdown-menu > li > a {
            color: #a94442; /* normal text color */
        }

            .with-nav-tabs.panel-danger .nav-tabs > li.dropdown .dropdown-menu > li > a:hover,
            .with-nav-tabs.panel-danger .nav-tabs > li.dropdown .dropdown-menu > li > a:focus {
                background-color: #ebccd1; /* hover bg color */
            }

        .with-nav-tabs.panel-danger .nav-tabs > li.dropdown .dropdown-menu > .active > a,
        .with-nav-tabs.panel-danger .nav-tabs > li.dropdown .dropdown-menu > .active > a:hover,
        .with-nav-tabs.panel-danger .nav-tabs > li.dropdown .dropdown-menu > .active > a:focus {
            color: #fff; /* active text color */
            background-color: #a94442; /* active bg color */
        }



</style>

<div class="row">
    <h1 class="text-center">MarketOn</h1>
</div>
<div class="row">
    <div>
        <a href="#" id="btnCrear" class="btn btn-danger InputFull">Crear Lista</a>
    </div>
</div>
<div class="row">
    <div class="panel with-nav-tabs panel-danger">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li class="active text-center" style="width:50%;"><a href="#listaPersonal" data-toggle="tab">Lista Personal</a></li>
                <li class="text-center" style="width:50%;"><a href="#listaFamiliar" data-toggle="tab">Lista Familiar</a></li>
            </ul>
        </div>
        <div class="panel-body">
            <div class="tab-content">
                <div class="tab-pane fade in active" id="listaPersonal">
                    <table class="table table-responsive text-center ">
                        <thead>
                            <tr>
                                <th style="text-align:center">Nombre Lista</th>
                                <th style="text-align:center">Fecha</th>
                                <th style="text-align:center">Detalle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var lista in Model.ListaCompraPersonal)
                                {
                                    <tr>
                                        <td><a href="" id="@lista.ListaCompraId" class="btnNombreLista">@lista.ListaCompraNombre</a></td>
                                        <td>@lista.Fecha</td>
                                        <td><a href="" id="@lista.ListaCompraId" class="btnDetalle glyphicon glyphicon-list-alt"></a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade" id="listaFamiliar">
                    <table class="table table-responsive text-center ">
                        <thead>
                            <tr>
                                <th style="text-align:center">Nombre Lista</th>
                                <th style="text-align:center">Fecha</th>
                                <th style="text-align:center">Detalle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var lista in Model.ListaCompraFamiliar)
                                {
                                    <tr>
                                        <td><a href="" id="@lista.ListaCompraId" class="btnNombreLista">@lista.ListaCompraNombre</a></td>
                                        <td>@lista.Fecha</td>
                                        <td><a href="" id="@lista.ListaCompraId" class="btnDetalle glyphicon glyphicon-list-alt"></a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- The Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" style="position: absolute;top: 5%;left: 90%;" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="ContenedorModal" style="display:flex"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="listaInfo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" style="position: absolute;top: 5%;left: 90%;" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="ContenedorListaInfo" style="display:flex"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="createModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center">Crear Lista</h4>
                <button type="button" style="position: absolute;top: 5%;left: 90%;" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="ContenedorModal-Crear" style="display:flex;">
                <form class="Contenedor-Crear" style="display:inline-block; width:100%" id="Contenedor-Registro" data-toggle="validator">
                    <div class="form-group text-center">
                        <h4>Nombre de Lista</h4>
                        <input type="text" name="nombreLista" class="form-control text-center" id="nombreLista" style="display: initial; max-width: 1000px; width:100%" />
                    </div>
                    <div class="form-group text-center">
                        <h4>Tipo de Lista</h4>
                        <select class="form-control text-center" id="tipoLista" style="display: initial; max-width: 1000px; width:100%">
                            <option>Seleccione...</option>
                            <option>Personal</option>
                            @{
                                if (@Model.Usuario.FamiliaId != null)
                                {
                                  <option>Familiar</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="btn-group col-md-12">
                        <input type="button" name="Crear" value="Crear Lista" class="btn btn-danger" id="crearLista" style="display: initial; max-width: 1000px; width:100%" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        alertify.set('notifier', 'position', 'bottom-left');
        var baseUrl = $("base").attr("href");
        var ListaCompraId = 0;

        $(document).ready(function () {
            $(".btnDetalle").click(function (e) {
                e.preventDefault();
                ListaCompraId = this.id;
                var ruta = baseUrl + "Complemento/DetalleLista/" + ListaCompraId;

                $.get(ruta, null, function (response) {
                    $("#ContenedorModal").html(response)
                    $("#myModal").modal("show")
                }).then(function () {
                    $(".chkValue").click(function (e) {
                        //e.preventDefault();
                        var idProducto = this.id;
                        var valueChk = $(this)["0"].checked;
                        $.ajax({
                            url: baseUrl + "Complemento/CambioEstado",
                            type: "POST",
                            data: JSON.stringify({ 'idProducto': idProducto, 'valueChk': valueChk }),
                            dataType: "json",
                            traditional: true,
                            contentType: "application/json; charset=utf-8"
                        });
                    });
                });
            });
        });

        $(document).ready(function () {
            $(".btnNombreLista").click(function (e) {
                e.preventDefault();
                ListaCompraId = this.id;
                var ruta = baseUrl + "Complemento/ListaInfo/" + ListaCompraId;

                $.get(ruta, null, function (response) {
                    $("#ContenedorListaInfo").html(response)
                    $("#listaInfo").modal("show")
                    ListaInfo();
                })
            });
        });
        
        $(document).ready(function () {
            $("#btnCrear").click(function (e) {
                e.preventDefault();
                $("#createModal").modal("show")
            });
        });

        $(document).ready(function () {
            $("#crearLista").click(function (e) {
                e.preventDefault();
                
                var nombreLista = $("#nombreLista").val();
                var tipoLista = $("#tipoLista").val();

                $.ajax({
                    url: baseUrl + "Complemento/CrearLista",
                    type: "POST",
                    data: JSON.stringify({ 'nombreLista': nombreLista, 'tipoLista': tipoLista }),
                    dataType: "json",
                    traditional: true,
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data == true) {
                            alertify.success('Lista creada correctamente');
                            location.reload(true);
                        }
                    },
                    error: function () {
                        alertify.error("Error al crear lista!!");
                    }
                });
            });
        });

        function ListaInfo() {
            $("#agregarProductos").click(function (e) {
                e.preventDefault();
                Clonar();
            });

            $("#btnAdd").click(function (e) {
                e.preventDefault();

                var listaProductos = [];

                $(".productos").each(function () {

                    var ProductoId = $(this).find("#Producto_ProductoId").val();
                    var Cantidad = $(this).find("#Producto_Cantidad").val();

                    if (ProductoId != "" && Cantidad != "") {
                        var obj = {
                            ProductoId: ProductoId,
                            Cantidad: Cantidad,
                            ListaCompraId: ListaCompraId,
                            Precio: 0,
                            Estado: "False"
                        };
                        listaProductos.push(obj)
                    } 
                }).promise().done(function() {

                    $.ajax({
                        url: baseUrl + "Complemento/AgregarProductos",
                        type: "POST",
                        data: JSON.stringify({ 'listaProductos': listaProductos }),
                        dataType: "json",
                        traditional: true,
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data.validacion == true) {
                                alertify.success('Productos agregados correctamente!');
                                location.reload(true);
                            }
                        },
                        error: function () {
                            alertify.error("Error al crear lista!!");
                        }
                    });
                })
            });
        }
     
        function Clonar() {
            var div = $("#ContenedorListaProductos").first().clone();
            $('#divBtn').before(div);
            var x = $(".prp input#Producto_Cantidad").last()["0"].value = "";
        }

    </script>
}