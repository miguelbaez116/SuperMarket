@model MarketOn.Models.MothesOfModels

@{
    ViewBag.Title = "ListaInfo";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div class="row">
    <div class="text-center">
        <h3> Lista - @Model.ListaCompra.SupermercadoNombre</h3>
        <input type="hidden" name="id" id="@Model.ListaCompra.ListaCompraId" class="listaCompraId" />
    </div>
        <div id="ContenedorListaProductos" class="productos">
            <div class="form-group text-center col-md-7">
                @Html.DropDownListFor(m => m.Producto.ProductoId, new SelectList(@Model.ListaProductos, "ProductoId", "ProductoNombre"), "Seleccione...", new { @class = "form-control text-center InputFull" })
            </div>
            <div class="form-group text-center col-md-3">
                <input type="number" name="cantidad" class="form-control text-center InputFull" placeholder="Cantidad" id="Producto_Cantidad" />
            </div>
        </div>
    <div class="form-group text-center col-md-2" id="divBtn">
        <a href="" id="agregarProductos">+</a>
    </div>
        <div>
            <a href="" id="btnAdd" class="btn btn-danger InputFull">Agregar Productos</a>
        </div>
    </div>



